{
    "version": 2,
    "builds": [
      {
        "src": "api/index.php",
        "use": "vercel-php@0.6.0"
      }
    ],
    "buildCommand": "mkdir -p /var/task/user/bootstrap/cache && chmod -R 775 /var/task/user/bootstrap/cache && composer install",
    "routes": [
      {
        "src": "/(.*)",
        "dest": "api/index.php"
      }
    ]   
  }